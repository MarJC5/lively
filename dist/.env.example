# Lively Framework Environment Configuration
# Copy this file to .env and configure as needed

# Environment: development, production, or testing
LIVELY_ENV=development

# Error Reporting
# Set to "false" in production to hide error details
DISPLAY_ERRORS=false
DEBUG_MODE=true

# Session Security
# Set to "true" in production for secure cookies
SESSION_SECURE=true
# Session lifetime in seconds (1800 = 30 minutes)
SESSION_LIFETIME=1800
